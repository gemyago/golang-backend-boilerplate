go_version=$(grep "^go " go.mod | awk '{print $2}')

gobrew use ${go_version}@latest

# We store common go related files (caches, common tools e.t.c) in the project dir
# It may make sense to place this in a parent folder to reuse with other projects.
export GOPATH=$(expand_path $PWD/./go/${go_version})

PATH_add $GOPATH/bin
PATH_add ./bin
PATH_add ./scripts
